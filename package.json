{
	"name": "qmk_electron_toolbox",
	"version": "0.0.1",
	"author": "Mattias Högnäs",
	"description": "qmk electron toolbox",
	"homepage": ".",
	"main": "build/backend/Main.js",
	"private": true,
	"scripts": {
		"#:copy:externals": "copyfiles ./externals/**/* ./build/backend",
		"#:lint:code": "tsc -p src --noEmit && yarn #:build:backend --noEmit && eslint ./src/**/*.{ts,tsx}",
		"#:lint:styles": "stylelint **/*.scss",
		"#:build:frontend": "react-scripts build ./src",
		"#:build:backend": "tsc -p src/backend",
		"cleanup": "rimraf node_modules && rimraf dist && rimraf build",
		"lint": "yarn #:lint:code && yarn #:lint:styles",
		"test": "react-scripts test --coverage",
		"test:staged": "cross-env CI=true react-scripts test --coverage",
		"dev": "react-scripts start",
		"electron:dev": "yarn #:copy:externals && concurrently \"cross-env BROWSER=none yarn dev\" \"wait-on http://localhost:3000 && yarn #:build:backend -w\" \"wait-on http://localhost:3000 && yarn #:build:backend && electron .\"",
		"electron:build": "yarn #:build:frontend && yarn #:build:backend && yarn #:copy:externals && electron-builder",
		"postinstall": "electron-builder install-app-deps"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.scss": [
			"stylelint",
			"git add"
		],
		"*.ts,*.tsx": [
			"#:lint:code",
			"yarn test:staged",
			"git add"
		]
	},
	"build": {
		"extends": null,
		"files": [
			"build/**/*",
			"externals"
		],
		"directories": {
			"buildResources": "public"
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"dependencies": {
		"@types/electron-devtools-installer": "^2.2.0",
		"@types/jest": "25.2.1",
		"@types/node": "13.13.2",
		"@types/prop-types": "^15.7.3",
		"@types/react": "16.9.34",
		"@types/react-dom": "16.9.6",
		"@types/webfontloader": "^1.6.29",
		"electron-devtools-installer": "^3.0.0",
		"electron-is-dev": "^1.2.0",
		"electron-reload": "^1.5.0",
		"prop-types": "^15.7.2",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-md": "^1.16.1",
		"react-scripts": "3.4.1",
		"typescript": "3.8.3",
		"webfontloader": "^1.6.28"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"concurrently": "^5.1.0",
		"copyfiles": "^2.2.0",
		"cross-env": "^7.0.2",
		"electron": "^8.2.3",
		"electron-builder": "^22.5.1",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.3",
		"husky": "^4.2.5",
		"lint-staged": "^10.1.7",
		"node-sass": "^4.13.1",
		"prettier": "^2.0.5",
		"stylelint": "^13.3.3",
		"stylelint-config-sass-guidelines": "^7.0.0",
		"stylelint-scss": "^3.17.1",
		"wait-on": "^4.0.2"
	}
}