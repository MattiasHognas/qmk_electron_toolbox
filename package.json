{
  "name": "qmk_electron_toolbox",
  "version": "0.0.1",
  "author": "Mattias Högnäs",
  "description": "qmk electron toolbox",
  "homepage": ".",
  "main": "build/backend/index.js",
  "private": true,
  "scripts": {
    "#:copy:externals": "copyfiles ./src/externals/**/* ./build",
    "#:lint:code": "tsc -p . --noEmit && yarn #:build:backend --noEmit && eslint ./src/**/*.{ts,tsx}",
    "#:lint:styles": "stylelint **/*.scss",
    "#:build:frontend": "node scripts/build.js ./src",
    "#:build:backend": "tsc -p src/backend",
    "cleanup": "rimraf node_modules && rimraf dist && rimraf build",
    "lint": "yarn #:lint:code && yarn #:lint:styles",
    "test": "node scripts/test.js --coverage",
    "test:staged": "cross-env CI=true node scripts/test.js --coverage",
    "dev": "node scripts/start.js",
    "electron:dev": "yarn #:copy:externals && concurrently \"cross-env BROWSER=none yarn dev\" \"wait-on http://localhost:3000 && yarn #:build:backend -w\" \"wait-on http://localhost:3000 && yarn #:build:backend && electron .\"",
    "electron:build": "yarn #:build:frontend && yarn #:build:backend && yarn #:copy:externals && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": [
      "stylelint",
      "git add"
    ],
    "*.ts,*.tsx": [
      "#:lint:code",
      "yarn test:staged",
      "git add"
    ]
  },
  "build": {
    "extends": null,
    "files": [
      "build/**/*",
      "externals"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "electron-devtools-installer": "^3.0.0",
    "electron-is-dev": "^1.2.0",
    "react": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@material-ui/core": "^4.9.11",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/styles": "^4.9.10",
    "@svgr/webpack": "5.3.1",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "25.2.1",
    "@types/node": "13.13.2",
    "@types/prop-types": "^15.7.3",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.6",
    "@types/webfontloader": "^1.6.29",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "^25.4.0",
    "babel-loader": "8.1.0",
    "babel-plugin-named-asset-import": "^0.3.6",
	  "babel-preset-react-app": "^9.1.2",
	  "browserslist": "4.12.0",
    "camelcase": "^6.0.0",
    "case-sensitive-paths-webpack-plugin": "2.3.0",
    "concurrently": "^5.1.0",
    "copyfiles": "^2.2.0",
    "css-loader": "3.5.3",
    "cross-env": "^7.0.2",
    "dotenv": "8.2.0",
    "dotenv-expand": "5.1.0",
    "electron": "^8.2.3",
    "electron-builder": "^22.5.1",
    "electron-reload": "^1.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "5.2.1",
    "eslint-loader": "4.0.2",
    "eslint-plugin-flowtype": "4.7.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "file-loader": "6.0.0",
    "fs-extra": "^9.0.0",
    "html-webpack-plugin": "4.2.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "3.0.0",
    "jest": "25.4.0",
    "jest-environment-jsdom-fourteen": "1.0.1",
    "jest-resolve": "25.4.0",
    "jest-watch-typeahead": "0.5.0",
    "lint-staged": "^10.1.7",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "^7.0.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "pnp-webpack-plugin": "1.6.4",
    "postcss-flexbugs-fixes": "4.2.0",
    "postcss-loader": "3.0.0",
    "postcss-normalize": "9.0.0",
    "postcss-preset-env": "6.7.0",
    "postcss-safe-parser": "4.0.2",
    "prettier": "^2.0.5",
    "prop-types": "^15.7.2",
    "react-app-polyfill": "^1.0.6",
    "react-dev-utils": "^10.2.1",
    "react-dom": "^16.13.1",
    "resolve": "1.17.0",
    "resolve-url-loader": "3.1.1",
    "sass-loader": "8.0.2",
    "semver": "7.3.2",
    "style-loader": "1.2.0",
    "stylelint": "^13.3.3",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-scss": "^3.17.1",
    "terser-webpack-plugin": "2.3.5",
    "ts-pnp": "1.2.0",
    "typescript": "3.8.3",
    "url-loader": "4.1.0",
    "wait-on": "^4.0.2",
    "webfontloader": "^1.6.28",
    "webpack": "4.43.0",
    "webpack-dev-server": "3.10.3",
    "webpack-manifest-plugin": "2.2.0",
    "workbox-webpack-plugin": "5.1.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "setupFilesAfterEnv": [],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jest-environment-jsdom-fourteen",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|ts|tsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "modulePaths": [],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
