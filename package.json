{
  "name": "qmk_electron_toolbox",
  "version": "0.0.1",
  "author": "Mattias Högnäs",
  "description": "qmk electron toolbox",
  "homepage": ".",
  "main": "build/backend/main.js",
  "private": true,
  "scripts": {
    "lint": "tsc --noEmit && eslint ./src/**/*.{js,ts,tsx} --fix",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && tsc -p src/backend -w\" \"wait-on http://localhost:3000 && tsc -p src/backend && electron .\"",
    "electron:windev": "concurrently \"cross-env BROWSER=none && yarn start\" \"wait-on http://localhost:3000 && tsc -p src/backend -w\" \"wait-on http://localhost:3000 && tsc -p src/backend && electron .\"",
    "electron:build": "yarn build && tsc -p src/backend && electron-builder",
    "eject": "react-scripts eject"
  },
  "build": {
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "25.2.1",
    "@types/node": "13.13.0",
    "@types/prop-types": "^15.7.3",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.6",
    "@types/webfontloader": "^1.6.29",
    "electron-devtools-installer": "^3.0.0",
    "electron-is-dev": "^1.2.0",
    "electron-reload": "^1.5.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-md": "^1.16.1",
    "react-scripts": "3.4.1",
    "typescript": "3.8.3",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "electron": "^8.2.3",
    "electron-builder": "^22.5.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "node-sass": "^4.13.1",
    "prettier": "^2.0.5",
    "wait-on": "^4.0.2"
  }
}